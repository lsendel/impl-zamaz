# Application Configuration
APP_PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info
SHUTDOWN_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=30
SWAGGER_ENABLED=true

# Keycloak Configuration
KEYCLOAK_BASE_URL=http://localhost:8082
KEYCLOAK_REALM=zerotrust-test
KEYCLOAK_CLIENT_ID=zerotrust-client
KEYCLOAK_CLIENT_SECRET=zerotrust-secret-12345
KEYCLOAK_PORT=8082

# Database Configuration
POSTGRES_PORT=5433
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=15m
REDIS_URL=redis://localhost:6380
REDIS_PORT=6380

# Zero Trust Configuration
ZEROTRUST_TRUST_LEVEL_READ=25
ZEROTRUST_TRUST_LEVEL_WRITE=50
ZEROTRUST_TRUST_LEVEL_ADMIN=75
ZEROTRUST_TRUST_LEVEL_DELETE=90

# Security Configuration
DEVICE_ATTESTATION_ENABLED=true
RISK_ASSESSMENT_ENABLED=true
CONTINUOUS_VERIFICATION=true

# API Configuration
API_BASE_URL=http://localhost:8080
API_VERSION=v1
API_TIMEOUT=30s

# Frontend Configuration
FRONTEND_BASE_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Server Timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# Trust Score Configuration
TRUST_SCORE_IDENTITY_MAX=30
TRUST_SCORE_DEVICE_MAX=25
TRUST_SCORE_BEHAVIOR_MAX=20
TRUST_SCORE_LOCATION_MAX=15
TRUST_SCORE_RISK_MAX=10
